<div class="createSession mx-auto">
  <p class="fs-2 text-center">請新增輸入你的支出</p>
  <form action="/records" method="post" class="mx-auto" style="max-width: 800px;">
    {{> message}}
    <div class="form-group row mb-3">
        <label for="name" class="col-sm-2 col-form-label fs-5">名稱:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="名稱" name="name" value="{{ name }}">
        </div>
    </div>
    <div class="form-group row mb-3">
      <label for="date" class="col-sm-2 col-form-label fs-5">日期:</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" id="date" placeholder="日期" name="date" value="{{ date }}">
      </div>
    </div>
    <div class="form-group row mb-3">
      <label for="category" class="col-sm-2 col-form-label fs-5">類別:</label>
      <div class="col-sm-10">
        <select class="form-select" name="category" id="category">
          {{#each categories}}
          <option value="{{ this._id }}" {{#if this.selected}}selected{{/if}}>{{ this.name }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row mb-3">
      <label for="amount" class="col-sm-2 col-form-label fs-5">金額:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" placeholder="金額" name="amount" value="{{ amount }}">
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary mt-3 me-3">新增支出</button>
      <a href="/" class="btn btn-primary mt-3">返回</a>
    </div>
  </form>
</div>

